@model RegisterViewModel

<div class="container mt-4">
    <h3 class="fw-bold" style="text-align:center">Register account</h3>

    <form method="post" asp-controller="Account" asp-action="Register">
        <div class="col-8 form-group mt-4 offset-4">
            @if (!string.IsNullOrWhiteSpace(@ViewData["errorMessage"] as string))
            {
                <p>@ViewData["errorMessage"]</p>
            }
            <div class="col-6">
                <label asp-for="DisplayName"></label>
                <input asp-for="DisplayName" type="text" class="form-control" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>

            <div class="col-6">
                <label asp-for="Email"></label>
                <input asp-for="Email" type="text" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-6">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="row mt-3">
                <div class="col-12 offset-1">
                    <button class="btn-dark mt-3 col-3 px-5 py-3" style="border-radius:7rem;width:150px;">Register</button>
                    <a class="btn-warning mt-3 col-3 px-5 py-3" style="border-radius:7rem;text-decoration:none" asp-controller="Home"
                       asp-action="Index">Back</a>
                </div>
               
            </div>



        </div>
    </form>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
