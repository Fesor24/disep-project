@model AddressViewModel

<div class="container mt-4">
    <h3 class="fw-bold">Enter Delivery Details</h3>
    
    <form method="post" asp-controller="Order" asp-action="CreateOrder">
        <div class="col-12 form-group mt-4">
            <div class="row mt-2">
                <div class="col-6">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" type="text" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="col-6">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" type="text" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-6">
                    <label asp-for="Street"></label>
                    <input asp-for="Street" type="text" class="form-control" />
                    <span asp-validation-for="Street" class="text-danger"></span>
                </div>

                <div class="col-6">
                    <label asp-for="City"></label>
                    <input asp-for="City" type="text" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-6">
                    <label asp-for="State"></label>
                    <input asp-for="State" type="text" class="form-control" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>

                
            </div>

            <div class="row mt-3">
                <button class="btn-dark mt-3 col-3 px-5 py-3 offset-4" style="border-radius:7rem;">Proceed to checkout</button>
            </div>
            
            

        </div>
    </form>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
