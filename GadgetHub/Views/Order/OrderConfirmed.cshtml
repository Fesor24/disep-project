@model OrderViewModel

<div class="container mt-3">

    @if(Model != null)
    {
        <div class="d-flex flex-column px-5 py-lg-5 my-lg-5" style="border:3px solid rgba(0,0,1,0.3);border-radius:17px">
            <h2 class="fw-bolder" style="text-align:center">Order Summary</h2>
            <div class="mt-3">
                <h3 class="fw-bold">Product Summary</h3>
                <div class="d-flex flex-column">
                    @foreach (OrderItemViewModel item in Model.OrderItems)
                    {
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex" style="width:40%">
                                <img src="@item.Image" alt="product_image" style="height:35px;width:45px;" />
                                <p class="ps-2">@item.ProductName</p>
                            </div>

                            <p>₦@item.Price</p>
                            <p>x @item.Quantity</p>
                        </div>
                    }
                </div>
            </div>

            <div class="mt-3">
                <h3 class="fw-bold">Order Status</h3>
                <div class="d-flex flex-column">
                    <div class="d-flex justify-content-between">
                        <p>Status: </p>
                        <p>@Model.OrderStatus</p>
                    </div>

                    <div class="d-flex justify-content-between">
                        <p>Payment: </p>
                        <p>@Model.PaymentStatus</p>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <h3 class="fw-bold">Delivery Details</h3>
                <div class="d-flex flex-column">
                    <div class="d-flex justify-content-between">
                        <p>Name: </p>
                        <p>@Model.Address.FirstName @Model.Address.LastName</p>
                    </div>

                    <div class="d-flex justify-content-between">
                        <p>Email: </p>
                        <p>@Model.Address.Email</p>
                    </div>

                    <div class="d-flex justify-content-between">
                        <p>Street: </p>
                        <p>@Model.Address.Street</p>
                    </div>

                    <div class="d-flex justify-content-between">
                        <p>City: </p>
                        <p>@Model.Address.City</p>
                    </div>

                    <div class="d-flex justify-content-between">
                        <p>State: </p>
                        <p>@Model.Address.State</p>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <h3 class="fw-bold">Cost Breakdown</h3>
                <div class="d-flex flex-column">
                    <div class="d-flex justify-content-between">
                        <p>Subtotal: </p>
                        <p>₦@Model.Subtotal</p>
                    </div>

                    <div class="d-flex justify-content-between">
                        <p>Delivery Fee: </p>
                        <p>₦@Model.DeliveryCharges</p>
                    </div>

                    <div class="d-flex justify-content-between">
                        <p>Total: </p>
                        <p>₦@Model.StrTotal</p>
                    </div>
                </div>
            </div>

            <p class="fw-bold pt-3" style="font-size:1.2rem;text-align:center;">
                Thank you for shopping with Gadget<span class="text-danger">Hub</span>
            </p>
        </div>
    }
    else
    {
        <div class="d-flex align-items-center justify-content-center mt-5">
            <p class="fw-bold" style="font-size:3rem">
                Visit our store to place an order
            </p>
        </div>
        
    }


</div>
