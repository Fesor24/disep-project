@model ShoppingCartItemViewModel



<tr>
    <td>
        <div class="d-flex align-items-center">
            <img src="@Model.Image" alt="product-img" style="height:43px;width:65px" />
            <p class="ps-2 pt-3">@Model.Name</p>
        </div>
    </td>
    <td>
        <p class="fw-bold pt-3" style="font-size:1.3rem">₦@Model.StrPrice</p>
    </td>
    <td>
        <div class="d-flex align-items-center justify-content-center">
            <a class="text-center d-flex justify-content-center align-items-center" style="text-decoration:none;height:2rem;width:2rem;
border-radius:50%;background-color:black;color:white;"
               asp-controller="ShoppingCart" asp-action="AddItemToCart" asp-route-id="@Model.Id">


                <i class="fa-solid fa-plus"></i>
            </a>


            <p style="font-size:1.3rem;font-weight:bold;padding:9px 10px 0;">@Model.Quantity</p>


            <a class="text-center d-flex justify-content-center align-items-center" style="text-decoration:none;height:2rem;width:2rem;
border-radius:50%;background-color:black;color:white;"
               asp-controller="ShoppingCart" asp-action="DecrementItemFromCart" asp-route-id="@Model.Id">


                <i class="fa-solid fa-minus"></i>
            </a>
        </div>
    </td>
    <td>
        <a class="text-center d-flex justify-content-center align-items-center me-5" style="text-decoration:none;height:2rem;width:2rem;
border-radius:50%;background-color:black;color:white;margin-top:12px"
           asp-controller="ShoppingCart" asp-action="DeleteItemFromCart" asp-route-id="@Model.Id">


            <i class="fa-solid fa-trash"></i>
        </a>
    </td>
</tr>
