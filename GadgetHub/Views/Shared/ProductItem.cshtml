@model ProductsViewModel

<div class="col-lg-3 col-md-6 col-sm-6 d-flex mb-5">
    <div class="card h-100">
        <!-- Product image-->
        <img class="card-img-top" src="@Model.Image" alt="product-img" />
        <!-- Product details-->
        <div class="card-body p-4">
            <div class="text-center">
                <!-- Product name-->
                <h5 class="fw-bolder">@Model.Name</h5>
                <!-- Product price-->
                ₦@Model.StrPrice
            </div>
        </div>
        <!-- Product actions-->
        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent d-flex align-items-center justify-content-center">
            
                
                <a class="text-center d-flex justify-content-center align-items-center btn-custom" style="text-decoration:none" 
                asp-controller="ShoppingCart" asp-action="AddItemToCart" asp-route-id="@Model.Id"><i class="fa-solid fa-cart-shopping"></i></a>
                
            
            <a class="text-center d-flex justify-content-center align-items-center btn-custom ms-2" style="text-decoration:none"
               asp-controller="Product" asp-action="GetProduct" asp-route-id="@Model.Id">
                

                <i class="fa-regular fa-eye"></i>
            </a>
        </div>
    </div>
</div>
