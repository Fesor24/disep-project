@model ProductsViewModel

<div class="col-lg-3 col-md-6 col-sm-6 d-flex mb-5">
    <div class="card h-100">
        <!-- Product image-->
        <img class="card-img-top" src="@Model.Image" alt="product-img" />
        <!-- Product details-->
        <div class="card-body p-4">
            <div class="text-center">
                <!-- Product name-->
                <h5 class="fw-bolder">@Model.Name</h5>
                <!-- Product price-->
                ₦@Model.Price
            </div>
        </div>
        <!-- Product actions-->
        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
            <div class="text-center d-flex justify-content-center align-items-center btn-custom">
                <a class="pe-2 btn-text" href="#">Add to Cart</a>

                <i class="fa-solid fa-cart-shopping"></i>
            </div>
        </div>
    </div>
</div>
